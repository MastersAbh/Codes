/*
    Problem link: https://codeforces.com/contest/1391/problem/C
*/
 
#include<bits/stdc++.h>
using namespace std;
#define lint long long int
#define pb push_back
#define mp make_pair
#define mod 1000000007
 
lint power(lint x, lint y, lint p)  
{  
    lint res = 1;     
  
    x = x % p; 
   
    if (x == 0) return 0; 
  
    while (y > 0)  
    {  
        if (y & 1)  
            res = (res*x) % p;  
  
        y = y>>1; // y = y/2  
        x = (x*x) % p;  
    }  
    return res;  
} 
 
 
int main() {
    lint n;
    cin>>n;
    lint f = 1;
    for(lint i=1;i<=n;i++) {
        f*=i;
        f%=mod;
    }
    cout<<(f + mod - power(2, n-1, mod))%mod;
}
